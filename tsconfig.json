{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
  ]
}
